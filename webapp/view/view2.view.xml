<mvc:View xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="wipro.controller.view2" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Fruit Details" showNavButton="true" navButtonPress="onBack">
		<content>
			<Button id="idBack" text="Back" press="onBack"></Button>
		</content>
		<headerContent>
			<Button icon="sap-icon://nav-back" press="onBack"></Button>
		</headerContent>
		<ObjectListItem intro="{NAME}" title="{PRODUCT_ID}" icon="{imageURL}" type="Active" press="onListItemPress" number="{PRICE}"
			numberUnit="{CURRENCY_CODE}">
			<firstStatus>
				<ObjectStatus text="{status}" state="{ path: 'status', formatter: '.formatter.status' }"/>
			</firstStatus>
		</ObjectListItem>
		<IconTabBar id="idIconTabBar">
			<items>
				<IconTabFilter icon="sap-icon://message-information" text="Information" key="">
					<content>
			<core:Fragment fragmentName="wipro.fragments.simpleForm" type="XML"> </core:Fragment>
				
				
					</content>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://drop-down-list" text="Cities" key="">
					<content>
						<l:VerticalLayout class="sapUiContentPadding" width="100%">
							<Select width="350px" items="{/cities}">
								<core:Item key="{name}" text="{name}"/>
							</Select>
							<ComboBox width="350px" items="{/cities}">
								<core:Item key="{name}" text="{name}"/>
							</ComboBox>
							<MultiComboBox width="350px" items="{/cities}">
								<core:Item key="{name}" text="{name}"/>
							</MultiComboBox>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				<IconTabFilter icon="sap-icon://supplier" text="Suppliers" key="">
					<content>
					<core:Fragment fragmentName="wipro.fragments.SupplierTable" type="XML">
						
					</core:Fragment>
					</content>
				</IconTabFilter>
			</items>
		</IconTabBar>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Save" type="Accept" press="onSave"/>
			    <Button text="Delete" type="Accept" press="onDelete"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>